<!doctype html>
<html>
<head>
	
	<link rel="stylesheet" type="text/css" href="/static/CSS/style.css">
</head>
<body>


<h2>All Books</h2>
{{#each foo}}
{{this}}
{{/each}}
<div class = "books">
<table class = "table_book">
    <thead>
    <tr>
<th>ID</th>
<th>ISBN</th>
<th>Title</th>
<th>Author</th>
<th>Genres</th>
</tr></thead>
<tbody>
	{{#each books}} 
<tr>
    <td>{{id}}</td>
    <td>{{isbn}}</td> 
    <td>{{title}}</td> 
    <td>{{author}}</td> 
    <td>{{genre}}</td>
</tr>
{{/each}} 
</tbody>
</table>
</div>

<div class="addb">
    <h>Add new book to the library: </h>
     <form action="/book" method="post">
        <fieldset>
    <label for="isbn">ISBN:</label>
    <input type="text" name="isbn" /></br>
    <label for="btitle">Book name:</label>
    <input type="text" name="btitle" /></br>
    <div id="add"><label for="author">Author name:</label>
    <input type="text" name="author" />
    <span class="adds" id="adds">+</span></div>
    <input type="submit" value="add new book" />
 </fieldset>
</form>
</br></br></br>

    <h>Add new author to the library: </h>
    <form action="/book/insert_author" method="post">
        <fieldset>
    <label for="aname">Name: </label>
    <input type="text" name="aname" /></br>
    <label for="bookid">Book ISBN:</label>
    <input type="text" name="bookid" /></br>
    <input type="submit" value="add new author" /></fieldset></form>

</br></br></br>
    <h>Delete book from library </h>
    <form action="/book/delete_book" method="post">
    <fieldset>
    <label for="bookid">Book ISBN:</label>
    <input type="text" name="bookid" /></br>
    <input type="submit" value="Delete book" />
</fieldset></form>
</div>






<script src="/static/js/library.js"></script>
</body>
</html>